# Configurações MODBUS
SERIAL_PORT=/dev/ttyUSB0
MODBUS_BAUDRATE=9600
MODBUS_ADDRESS_ENTRADA=1
MODBUS_ADDRESS_SAIDA=2
MODBUS_ADDRESS_PLACAR=3

# Base de dados
DB_PATH=./data/estacionamento.db

# Modo de operação (simulation ou hardware)
MODE=simulation

# Servidor Central
CENTRAL_HOST=localhost
CENTRAL_PORT=8080

# Configurações de preço
PRECO_POR_MINUTO=0.15
VALOR_MINIMO=2.00

# Configurações LPR
LPR_TIMEOUT=5
LPR_CONFIDENCE_MIN=0.8

# Configurações de log
LOG_LEVEL=INFO
LOG_DIR=./logs

# Configurações de vagas
TOTAL_VAGAS=8
ENDERECO_INICIAL_VAGAS=0

# Timeouts (segundos)
TIMEOUT_CANCELA=10
TIMEOUT_SENSOR=30
TIMEOUT_COMUNICACAO=5
